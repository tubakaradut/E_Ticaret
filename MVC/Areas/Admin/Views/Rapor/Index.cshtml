@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <div class="row">
                    <div class="col-md-9">
                        <h2>Rapor Sayfası</h2>
                    </div>

                </div>
            </header>
            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <td>Toplam Gelir</td>
                        <th>Toplam Sipariş Sayısı</th>
                        <th>Toplam Kullanıcı Sayısı</th>
                        <th>En Çok Satışı Yapılan Ürün </th>
                        <th>Toplam KDV</th>
                        <th>Aylık Gelir</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th>@ViewBag.TotalPrice </th>
                        <th>@ViewBag.TotalOrderCount</th>
                        <th>@ViewBag.TotalUserCount</th>
                        <th>@ViewBag.MostSalesProduct.ProductName (@ViewBag.MostSalesProduct.TotalQuantity)</th>
                        <th></th>
                        <th></th>
                    </tr>
                </tbody>
            </table>
        </section>
    </div>
</div>