@model List<OrderDetail>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <div class="row">
                    <div class="col-md-9">
                        <h2>Rapor Sayfası</h2>
                    </div>

                </div>
            </header>
            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <td>Order Details Id</td>
                        <th>Order Id</th>
                        <th>Ürün adı</th>
                        <th>Fiyat</th>
                        <th>Miktar</th>
                        <th>İndirim</th>
                        <th>Toplam Fiyat</th>
                        <th>Durumu</th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var orderDetail in Model)
                    {
                       

                        <tr>
                            <td>
                                @orderDetail.ID
                            </td>

                            <td>
                                @orderDetail.OrderId
                            </td>
                            <td>
                                @orderDetail.Product.ProductName
                            </td>
                            <td>
                                @orderDetail.UnitPrice
                            </td>
                            <td>
                                @orderDetail.Quantity
                            </td>
                            <td>
                                @orderDetail.Discount
                            </td>
                            <td>
                                @orderDetail.SubTotal
                            </td>


                            <td>

                                @switch (orderDetail.Status)
                                {
                                    case Core.Enums.Status.None:
                                        <span class="label label-info label-mini">@orderDetail.Status.ToString()</span>
                                        break;
                                    case Core.Enums.Status.Active:
                                        <span class="label label-success label-mini">@orderDetail.Status.ToString()</span>
                                        break;
                                    case Core.Enums.Status.Deleted:
                                        <span class="label label-danger label-mini">@orderDetail.Status.ToString()</span>
                                        break;
                                    case Core.Enums.Status.Updated:
                                        <span class="label label-warning label-mini">@orderDetail.Status.ToString()</span>
                                        break;
                                }
                            </td>
                           
                        </tr>
                    }
                </tbody>
            </table>
        </section>
        <div class="col-md-3">
            <div class="card">
                <div class="card-header">
                    <h5>Özet</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                     
                        <h5>En çok satılan ürün: @ViewBag.MostSalesProduct.</h5>
                        <h5>Toplam Gelir: @ViewBag.TotalPrice  </h5>
                        <h5></h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>