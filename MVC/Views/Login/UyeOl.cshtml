@model MVC.ViewModels.AppUserVM
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12">
    <section class="panel">
        <header class="panel-heading">
            @if (TempData["info"] != null)
            {
                <div>
                    <h5>@TempData["info"]</h5>
                </div>
            }
            @if (TempData["error"] != null)
            {
                <h2>@TempData["error"]</h2>
            }
        </header>
        <div class="panel-body">
            <form method="post" role="form" class="form-horizontal tasi-form">
                <div class="form-group has-success">
                    <label class="col-lg-2 control-label">First Name</label>
                    <div class="col-lg-10">
                        @Html.ValidationMessageFor(x => x.Firstname)
                        <br />
                        @Html.TextBoxFor(x => x.Firstname, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group has-success">
                    <label class="col-lg-2 control-label">Last Name</label>
                    <div class="col-lg-10">
                        @Html.ValidationMessageFor(x => x.Lastname)
                        <br />
                        @Html.TextBoxFor(x => x.Lastname, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group has-error">
                    <label class="col-lg-2 control-label">Username</label>
                    <div class="col-lg-10">
                        @Html.ValidationMessageFor(x => x.Username)
                        <br />
                        @Html.TextBoxFor(x => x.Username, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group has-warning">
                    <label class="col-lg-2 control-label">Email</label>
                    <div class="col-lg-10">
                        @Html.ValidationMessageFor(x => x.Email)
                        <br />
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group has-warning">
                    <label class="col-lg-2 control-label">Password</label>
                    <div class="col-lg-10">
                        @Html.ValidationMessageFor(x => x.Password)
                        <br />
                        @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group has-success">
                    <label class="col-lg-2 control-label">ConfirmPassword</label>
                    <div class="col-lg-10">
                        @Html.ValidationMessageFor(x => x.ConfirmPassword)
                        <br />
                        @Html.TextBoxFor(x => x.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
                        <button class="btn btn-danger" type="submit">Kayıt Ol</button>
                    </div>
                </div>
            </form>
        </div>
    </section>
</div>

