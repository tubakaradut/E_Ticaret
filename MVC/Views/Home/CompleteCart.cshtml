@model List<OrderDetail>
@{
    ViewBag.Title = "CompleteCart";
    Layout = "~/Views/Shared/_Layout.cshtml";
    decimal? totalPrice = 0;
}

<h1>Siparişiniz oluşturulmuştur. Sipariş Numaranız <strong>@ViewBag.OrderNumber</strong> ve siparişiniz: </h1>

<section>
    <div class="row">
        <div class="col-md-9">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Quantity</th>
                        <th>Unit Price</th>
                        <th>Sub Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        totalPrice += item.SubTotal;
                        <tr>

                            <td>
                                @item.Product.ProductName
                            </td>
                            <td>
                                @item.Quantity
                            </td>
                            <td>
                                @item.UnitPrice
                            </td>
                            <td>
                                @item.SubTotal
                            </td>

                        </tr>
                    }
                    <tr>

                        <td>
                            <h5>Toplam Fiyat: @totalPrice TL</h5>
                        </td>

                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <button type="button" class="btn btn-default btn-lg btn-danger pull-right"> @Html.ActionLink("Çıkış", "Exit", new { @class = "btn btn-danger mt-auto" })</button>
</section>